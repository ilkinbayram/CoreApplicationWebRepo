<script>
    (function () {

        $.switcher();

        $("#invalidCheck").click(function (e) {

            var checkStatus = $("#invalidCheck").data("check");

            console.log(checkStatus);

            if (!checkStatus) {
                $(".fa-exclamation").addClass("fa-check-circle").addClass("text-success").removeClass("fa-exclamation").removeClass("text-danger");

            } else {
                $(".fa-check-circle").addClass("fa-exclamation").addClass("text-danger").removeClass("fa-check-circle").removeClass("text-success");

            }

            $("#invalidCheck").data("check", !checkStatus);
        });


        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>