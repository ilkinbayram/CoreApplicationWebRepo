<!--Register Area Start-->
<div class="register-area register-style-two">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-12">
                <div class="account-form">
                    <div class="register-title">
                        <i class="fa fa-lock"></i>
                        <h4>Create Your Free Account Now !</h4>
                    </div>
                    <form action="#" method="post">
                        <input type="text" placeholder="Your Name *" name="name">
                        <input type="email" placeholder="Email*" name="email">
                        <input type="text" placeholder="Phone *" name="phone">
                        <button type="submit" class="button-default button-yellow">Get it now</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-12">
                <div class="register-info">
                    <h4>GET 100s OF ONLINE <span>COURSES FOR FREE</span></h4>
                    <h1>REGISTER NOW</h1>
                    <div class="timer">
                        <div data-countdown="2020/07/01" class="timer-grid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of Register Area-->