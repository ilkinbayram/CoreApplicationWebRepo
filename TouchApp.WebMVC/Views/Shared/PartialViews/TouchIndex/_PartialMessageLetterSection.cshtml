<!--MessageLetter Area Start-->
<div class="newsletter-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form class="newsletter-container">
                    <div class="row">
                        <div class="col-lg-3 col-md-4 col-sm-12">
                        </div>
                        <div class="col-lg-3 col-md-4 col-sm-6">
                            <input type="text" name="subject" placeholder="@("Subject.LocalizationRecourseForm".Translate())">
                            <input type="text" name="name" placeholder="@("GeneralYourName.LocalizationAll".Translate())">
                            <input type="email" name="email" placeholder="@("GeneralYourEmail.LocalizationAll".Translate())">
                        </div>
                        <div class="col-lg-6 col-md-4 col-sm-6">
                            <textarea name="message" id="newsletter-msg" placeholder="@("GeneralMessageText.LocalizationAll".Translate())"></textarea>
                            <button class="button-default">@("GeneralSendButton.LocalizationAll".Translate())</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--End of MessageLetter Area-->