@using Core.Entities.Dtos.Slider;
@using Core.Extensions;



@model List<GetSliderDto>;
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<!--Slider Area Start-->
<div class="slider-area slider-five-area">
    <div class="preview-2">
        <div id="nivoslider" class="slides">
            @for (int i = 0; i < Model.Count; i++)
            {
                <img src="@Model[i].SliderMediaSource" alt="" title="#slider-@(i%2==0?"1":"2")-caption@(i+1)" />
            }
        </div>

        @for (int i = 0; i < Model.Count; i++)
        {
            <div id="slider-@(i%2==0?"1":"2")-caption@(i+1)" class="nivo-html-caption nivo-caption">
                <div class="banner-content slider-@(i%2==0?"1":"2")">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="text-content slide-@(i%2==0?"1":"2") hidden-xs">
                                    <p class="sub-title">@Model[i].SubTitleKey.Translate()</p>
                                    <h1 class="title1">@Model[i].MainTitleKey.Translate()</h1>
                                    <div class="banner-readmore">
                                        <a title="Read more" href="#">Enroll your child</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!--End of Slider Area-->