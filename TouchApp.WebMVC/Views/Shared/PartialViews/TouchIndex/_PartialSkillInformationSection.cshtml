<!--Skill information Area Start-->
<div class="skill-information-area section-gray section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="about-skill-text">
                    <h2>@("PageWelcomeTextHeader.Localization".Translate())</h2>
                    <br />
                    <p>@("WelcomeDescriptionWideText.TranslateLocalization".Translate())</p>
                    @*<a href="#" class="button-default button-yellow">View More</a>*@
                </div>
            </div>
            <div class="col-lg-6">
