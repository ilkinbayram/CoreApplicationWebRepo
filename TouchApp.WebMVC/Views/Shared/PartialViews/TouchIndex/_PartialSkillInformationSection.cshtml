@{
    var welcomeImageUri = ConfigHelper.GetSettingsDataStatic<string>(ParentKeySettings.MediaServiceURL_ContainerKeyword.ToString(), ChildKeySettings.Media_Url_Welcome_OpenPage.ToString());
}

