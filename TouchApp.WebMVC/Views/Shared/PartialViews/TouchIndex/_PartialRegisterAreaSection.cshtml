<!--Register Area Start-->
<div class="register-area register-style-two">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-12">
                <div class="account-form">
                    <div class="register-title">
                        <i class="fa fa-lock"></i>
                        <h4>@("DirectRegisterFormHeader.Localization".Translate())</h4>
                    </div>
                    <form>
                        <input type="text" id="layoutRegisterPartial_EmailName" placeholder="@("GeneralYourName.LocalizationAll".Translate())" name="name">
                        <input type="email" id="layoutRegisterPartial_EmailEmail" placeholder="@("GeneralYourEmail.LocalizationAll".Translate())" name="email">
                        <input type="text" id="layoutRegisterPartial_EmailPhone" placeholder="@("GeneralYourPhone.LocalizationAll".Translate())" name="phone">
                        <button type="button" id="registerPartial_EmailSubmitButton" data-mailtype="@((byte)MailType.Register_email)" class="button-default button-yellow">@("GeneralEnrollCourse.ButtonText".Translate())</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-12">
                <div class="register-info">
                    <h4>@("DirectRegisterFormInformationLittleFirst.Localization".Translate()) <span>@("DirectRegisterFormInformationLittleSecond.Localization".Translate())</span></h4>
                    <h1>@("DirectRegisterFormInformationLarge.Localization".Translate())</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of Register Area-->