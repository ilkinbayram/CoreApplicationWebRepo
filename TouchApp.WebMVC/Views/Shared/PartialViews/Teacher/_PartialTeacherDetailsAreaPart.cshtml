@using TouchApp.WebMVC.Areas.Global.Models.ViewModel
@using Core.Extensions

@model TeacherViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@



<!--Teacher Details Area Start-->
<div class="teacher-details-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-12">
                <div class="teacher-details-image">
                    <img src="@(Model.CurrentTeacher.CaptionSource)" alt="@("Inform.ImageWasNotFoundTranslate".Translate())">
                    <div class="social-links">
                        @foreach (var teacherSocialOne in Model.CurrentTeacher.TeacherSocialMedias)
                        {
                            <a target="_blank" href="@(teacherSocialOne.RedirectUrl)">@(Html.Raw(teacherSocialOne.SocialMedia.IconHtml))</a>
                        }
                    </div>
                </div>
                <div class="teacher-details-info">
                    <h4>@(string.Format("{0} {1}",Model.CurrentTeacher.FirstName,Model.CurrentTeacher.LastName))</h4>
                    <span>@(Model.CurrentTeacher.JobDescKey),&nbsp;<i class="fas fa-briefcase"></i>&nbsp;@(Model.CurrentTeacher.CompanyNameKey)</span>
                    <div class="teacher-info-text">
                        <span><i class="fa fa-phone"></i>@("GeneralPhone.LocalizationAll".Translate()):&nbsp;@(string.Format("({0})",Model.CurrentTeacher.PhoneNumberPrefix, Model.CurrentTeacher.PhoneNumber))</span>
                        <span><i class="fa fa-envelope"></i>@("GeneralEmailHeader.LocalizationAll".Translate()):&nbsp;@(Model.CurrentTeacher.Email)</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="teacher-about-info">
                    <div class="single-title">
                        <h3>@("GeneralOverViewTeacherDetail.Localization".Translate())</h3>
                    </div>
                    @(Model.CurrentTeacher.BiographyKey.Translate())
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="single-title">
                            <h3>@("CourseOfInstructorDetailsPageOfInstructor.Localization".Translate())</h3>
                        </div>
                    </div>
                    @foreach (var courseOne in Model.TeacherCourses)
                    {
                        <div class="col-md-6 col-sm-6">
                            <div class="single-class">
                                <div class="single-class-image">
                                    <a href="/Global/StudyingPackage/GetCurrent/@(courseOne.Id)">
                                        <img src="@(courseOne.CaptionImageSource)" alt="@("Inform.ImageWasNotFoundTranslate".Translate())">
                                        <span class="class-date">@(courseOne.PublishDate.ToString("dd-MM-yyyy"))&nbsp;<i class="fa fa-calendar"></i></span>
                                    </a>
                                </div>
                                <div class="single-class-text">
                                    <div class="class-des">
                                        <h4><a href="/Global/StudyingPackage/GetCurrent/@(courseOne.Id)">@(courseOne.TitleKey.Translate())</a></h4>
                                        <p>@(courseOne.PreviewDescKey.Translate())</p>
                                    </div>
                                    <div class="class-schedule">
                                        <span>@("GeneralCoursePeriodDefiner.TranslateLocalization".Translate()):&nbsp;@(courseOne.TotalMonths)&nbsp;@("MonthsDefinerLocalization.TranslatePerLang".Translate())</span>
                                        <span>@("PricePerMonthPayment.TranslateLocalization"):&nbsp;@(courseOne.PricePerMonth)&nbsp;@("PriceAZNDefinerLocalization.TranslatePerLang".Translate())</span>
                                        <span class="arrow"><a href="#"><i class="fa fa-angle-right"></i></a></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of Teacher Details Area-->