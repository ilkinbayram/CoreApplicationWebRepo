@using Core.Extensions
@using TouchApp.WebMVC.Areas.Global.Models.ViewModel
@using Core.Utilities.Helpers
@using Core.Resources.Enums

@model AllCoursesViewModel

@{
    string EnrollChildBackImageUrl = ConfigHelper.GetSettingsDataStatic<string>(ParentKeySettings.MediaServiceURL_ContainerKeyword.ToString(), ChildKeySettings.Media_Url_Enroll_SideImage.ToString());
}

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@



<div class="class-list-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-8">
                @if (Model != null && Model.AllCourses != null && Model.AllCourses.Count > 0)
                {
                    foreach (var courseOne in Model.AllCourses)
                    {
                        <div class="class-list-item">
                            <div class="row">
                                <div class="col-xl-5 col-lg-6 col-md-6">
                                    <a href="/Global/StudyPackage/GetCurrent/@(courseOne.Id)"><img src="@(courseOne.CaptionImageSource)" alt="@("Inform.ImageWasNotFoundTranslate".Translate())"></a>
                                </div>
                                <div class="col-xl-7 col-lg-6 col-md-6">
                                    <div class="class-list-text">
                                        <h3><a href="/Global/StudyPackage/GetCurrent/@(courseOne.Id)">@(courseOne.TitleKey.Translate())</a></h3>
                                        <div class="class-information">
                                            <span>@(courseOne.PublishDate.ToString("dd.MM.yyyy"))&nbsp;<i class="fa fa-calendar"></i></span>
                                            @if (courseOne.TeacherCourses != null && courseOne.TeacherCourses.Count > 0)
                                            {
                                                foreach (var teacher in courseOne.TeacherCourses.Select(x => x.Teacher).ToList())
                                                {
                                                    <span><i class="fas fa-chalkboard-teacher"></i>&nbsp;@($"{teacher.FirstName} {teacher.LastName}")</span>
                                                }
                                            }
                                        </div>
                                        <p>@(courseOne.PreviewDescKey.Translate())</p>
                                        <a href="/Global/StudyPackage/GetCurrent/@(courseOne.Id)" class="button-default">@("GeneralReadMore.ButtonText".Translate())&nbsp;<i class="fa fa-angle-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="col-xl-3 col-lg-4">
                <div class="single-widget-item res-mrg-top-xs">
                    <div class="single-title">
                        <h3>@("BlogCategoryListHeader.TranslateLocalization".Translate())</h3>
                    </div>
                    <div class="single-widget-container">
                        <ul class="sidebar-categories class">
                            <li>&nbsp;<a href="/Global/StudyPackage/FilterByCourseCategoryId/999">@("GeneralAllTextTranslate.Localization".Translate())</a></li>
                            @if (Model != null && Model.CourseCategories != null && Model.CourseCategories.Count > 0)
                            {
                                foreach (var courseCatOne in Model.CourseCategories)
                                {
                                    <li>&nbsp;<a href="/Global/StudyPackage/FilterByCourseCategoryId/@(courseCatOne.Id)">@(courseCatOne.NameKey.Translate())</a></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <div class="single-widget-item">
                    @if (Model != null && Model.RecentBlogs != null && Model.RecentBlogs.Count > 0)
                    {
                        <div class="single-title">
                            <h3>@("RecentBlogsListHeader.TranslateLocalization".Translate())</h3>
                        </div>
                        <div class="single-widget-container">

                            @foreach (var blogOne in Model.RecentBlogs)
                            {
                                <div class="recent-post-item">
                                    <div class="recent-post-image">
                                        <a href="/Global/Blog/GetCurrent/@(blogOne.Id)"><img src="@(blogOne.CaptionSource)" alt="@("Inform.ImageWasNotFoundTranslate".Translate())"></a>
                                    </div>
                                    <div class="recent-post-text">
                                        <h4><a href="/Global/Blog/GetCurrent/@(blogOne.Id)">@(blogOne.TitleKey.Translate())</a></h4>
                                        <span>@(blogOne.Created_at.ToString("dd.MM.yyyy"))&nbsp;<i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                <div class="single-widget-item hidden-sm">
                    <div class="single-widget-container">
                        <a href="#">
                            <img src="@(EnrollChildBackImageUrl)" alt="@("Inform.ImageWasNotFoundTranslate".Translate())">
                            <span>@("GeneralEnrollYourChildCourse.ButtonText".Translate())</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>