@using Core.Extensions
@using Core.Resources.Enums
@using TouchApp.WebMVC.Areas.Global.Models.ViewModel

@model CourseViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@



<!--StudyPackage Details Area Start-->
<div class="class-details-area section-padding-top">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-8">
                <div class="class-details-container">
                    <h1>@(Model.CurrentCourse.TitleKey.Translate())</h1>
                    <div>
                        <img src="@(Model.CurrentCourse.CaptionImageSource)" alt="@("Inform.ImageWasNotFoundTranslate".Translate())">
                    </div>
                </div>
                <div class="class-details-tab">
                    <div class="class-details-tab-menu">
                        <ul role="tablist" class="nav nav-tabs">
                            <li role="presentation"><a class="active" data-toggle="tab" role="tab" aria-controls="overview" href="#overview"><i class="fa fa-graduation-cap"></i>@("OverviewCurrentCourseContent.Localization".Translate())</a></li>
                            <li role="presentation"><a data-toggle="tab" role="tab" aria-controls="schedule" href="#schedule"><i class="fa fa-calendar"></i>@("WeeklyMaintenanceHeaderCourse.Localization".Translate())</a></li>
                            <li role="presentation"><a data-toggle="tab" role="tab" aria-controls="comments" href="#comments"><i class="fa fa-comments"></i>@("CourseCommentNavSinglePage.TranslateLocalization".Translate())(@(Model.ActiveCommentsOfCurrentCourse.Count))</a></li>
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                    <div class="tab-content">
                        <div id="overview" class="tab-pane active" role="tabpanel">
                            @(Html.Raw(Model.CurrentCourse.ContentHtmlRawKey.Translate()))
                        </div>
                        <div id="schedule" class="tab-pane" role="tabpanel">
                            @(Html.Raw(Model.CurrentCourse.ScheduleHtmlRawKey.Translate()))
                        </div>
                        <div id="comments" class="tab-pane" role="tabpanel">
                            <h3>@("FeedBackCurrentCourseComments.TranslateLocalization".Translate())</h3>
                            @if (Model.ActiveCommentsOfCurrentCourse != null && Model.ActiveCommentsOfCurrentCourse.Count > 0)
                            {
                                foreach (var commentOne in Model.ActiveCommentsOfCurrentCourse)
                                {
                                    <span>@(commentOne.OwnerEmail):&nbsp;"@(commentOne.CommentContent)"</span>
                                }
                            }
                            <hr />
                            <div>
                                <div class="contact-form">
                                    <div class="single-title">
                                        <h3>@("FeedBackCurrentCourse.TranslateLocalization".Translate())</h3>
                                    </div>
                                    <div class="contact-form-container">
                                        <div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input type="email" id="currentCourse_FeedBackOwnerEmail" name="email" placeholder="@("GeneralYourEmail.LocalizationAll".Translate())">
                                                </div>
                                            </div>
                                            <textarea name="feedBack" id="currentCourse_FeedBackContent" placeholder="@("FeedBackCommentText.TranslateLocalization".Translate())"></textarea>
                                            <button type="button" id="currentCourse_FeedBackSubmitBtn" data-courseid="@(Model.CurrentCourse.Id)" class="button-default button-yellow submit"><i class="fa fa-send"></i>@("GeneralSendButton.LocalizationAll".Translate())</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-4">
                <div class="single-widget-item">
                    <div class="single-title">
                        <h3>@("InfoCourseHeaderCurrentSelected.TranslateLocalization".Translate())</h3>
                    </div>
                    <div class="single-widget-container">
                        <ul class="class-infos">
                            @(Model.CurrentCourse.CourseInfoHtmlMaintenanceKey.Translate())
                        </ul>
                    </div>
                </div>
                <div class="single-widget-item">
                    @if (Model.CurrentCourseTeachers != null && Model.CurrentCourseTeachers.Count > 0)
                    {
                        <div class="single-title">
                            <h3>@("TheTeachersOfThisCurrentCurse.TranslateLocalization".Translate())</h3>
                        </div>
                        <div class="single-widget-container">
                            @foreach (var teacherOne in Model.CurrentCourseTeachers)
                            {
                                <div class="teacher-info-widget">
                                    <div class="widget-image">
                                        <a href="/Global/Teacher/GetCurrent/@(teacherOne.Id)"><img src="@(teacherOne.ProfilePhotoPath)" alt="@("Inform.ImageWasNotFoundTranslate".Translate())"></a>
                                    </div>
                                    <div class="widget-infos">
                                        <h4><a href="/Global/Teacher/GetCurrent/@(teacherOne.Id)">@(string.Format("{0} {1}", teacherOne.FirstName, teacherOne.LastName))</a></h4>
                                        <p>@(teacherOne.JobDescKey.Translate()),&nbsp;<i class="fas fa-briefcase"></i>&nbsp;@(teacherOne.CompanyNameKey)</p>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                <div class="single-widget-item">
                    <div class="single-title">
                        <h3>@("EnrollThisCurrentCourseHeader.TranslateLocalization".Translate())</h3>
                    </div>
                    <div class="single-widget-container">
                        <div>
                            <input type="text" id="directEnrollCourseMailPartial_Name" name="name" placeholder="@("GeneralYourName.LocalizationAll".Translate())">
                            <input type="email" id="directEnrollCourseMailPartial_Email" name="email" placeholder="@("GeneralYourEmail.LocalizationAll".Translate())">
                            <textarea name="Message" id="directEnrollCourseMailPartial_MessageText" placeholder="@("GeneralMessageText.LocalizationAll".Translate())"></textarea>
                            <button type="button" id="directEnrollCourseMailPartial_SendBtn" data-courseid="@(Model.CurrentCourse.Id)" data-mailtype="@((byte)MailType.CurrentCourse_DirectRegisterEmail)" class="button-default button-yellow submit">@("GeneralSendButton.LocalizationAll".Translate())&nbsp;<i class="fa fa-send"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of StudyPackage Details Area-->