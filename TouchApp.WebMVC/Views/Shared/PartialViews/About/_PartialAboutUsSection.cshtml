@using Core.Extensions
@using Core.Utilities.Helpers
@using Core.Resources.Enums

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    string AboutUsMediaWhoAreWeCaptionUrl = ConfigHelper.GetSettingsDataStatic<string>(ParentKeySettings.MediaServiceURL_ContainerKeyword.ToString(), ChildKeySettings.Media_URL_TouchAcademy_Lighten_Logo.ToString());
}



<!--About Area Start-->
<div class="about-area section-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title-wrapper">
                    <div class="section-title">
                        <h3>@("AboutUsPartHeaderTitle.Localization".Translate())</h3>
                        <p>@("AboutUsPartHeaderSubtitle.Localization".Translate())</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="about-text-container">
                        @("AboutUs.WhoAreWeLocalization".Translate())
                </div>
            </div>
            <div class="col-lg-6">
                <div class="skill-image">
                    <img src="@(AboutUsMediaWhoAreWeCaptionUrl)" alt="@("Inform.ImageWasNotFoundTranslate".Translate())">
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of About Area-->