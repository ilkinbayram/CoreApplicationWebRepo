@using Core.Utilities.UsableModel
@model AlertResult

    <link href="~/css/notificationStyle.css" rel="stylesheet" />

    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-sm-offset-3">
                <div class="new-message-box">
                    <div class="new-message-box-@(Model.Status.ToString().ToLower())">
                        <div class="info-tab tip-icon-@(Model.Status.ToString().ToLower())" title="@(Model.Status.ToString())"><i></i></div>
                        <div class="tip-box-@(Model.Status.ToString().ToLower())">
                            <p>
                                @(Model.AlertMessage)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>