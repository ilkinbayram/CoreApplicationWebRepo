@using Core.Utilities.UsableModel
@model AlertResult

@{
    string statusClass = "warning";
    if (Model != null && !string.IsNullOrEmpty(Model.Status.ToString()))
    {
        statusClass = Model.Status.ToString().ToLower();
    }
}

<link href="~/css/notificationStyle.css" rel="stylesheet" />

<div class="container-fluid text-center">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
            <div class="new-message-box">
                <div class="new-message-box-@(statusClass)">
                    <div class="info-tab tip-icon-@(statusClass)" title="@(statusClass)"><i></i></div>
                    <div class="tip-box-@(statusClass)">
                        <p>
                            @if (Model != null && Model.AlertMessages != null && Model.AlertMessages.Count > 0)
                            {
                                @foreach (var message in Model.AlertMessages)
                                {
                                    <i class="fas fa-quote-left"></i> @($"  {message}  ") <i class="fas fa-quote-right"></i><br />
                                }
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>