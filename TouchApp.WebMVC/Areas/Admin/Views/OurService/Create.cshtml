@using Core.Entities.Dtos.OurService
@using Core.Extensions

@model CreateManagementCourseServiceDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdminPanelBootstrap.cshtml";
}

<h1>Create</h1>

<h4>CreateCourseServiceDto</h4>
<hr />
<div class="row">
    <div class="col-md-12 col-12 col-sm-12">
        @using (Html.BeginForm("Create", "OurService", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row  mb-1 mt-2">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="row mb-1 mt-2">
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.TitleKey, "GeneralTitleKey.VisualLocalization".Translate(), new { @class = "control-label h6" })
                                @Html.TextBoxFor(x => x.TitleKey, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.TitleKey, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.TitleTranslateAZE, "TranslateToAzerbaijani.VisualLocalization".Translate(), new { @class = "control-label h6" })
                                @Html.TextBoxFor(x => x.TitleTranslateAZE, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.TitleTranslateAZE, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.TitleTranslateRUS, "TranslateToRussian.VisualLocalization".Translate(), new { @class = "control-label h6" })
                                @Html.TextBoxFor(x => x.TitleTranslateRUS, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.TitleTranslateRUS, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.TitleTranslateENG, "TranslateToEnglish.VisualLocalization".Translate(), new { @class = "control-label h6" })
                                @Html.TextBoxFor(x => x.TitleTranslateENG, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.TitleTranslateENG, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                            <div class="form-group mb-1">
                                @Html.LabelFor(x => x.TitleTranslateTUR, "TranslateToTurkish.VisualLocalization".Translate(), new { @class = "control-label h6" })
                                @Html.TextBoxFor(x => x.TitleTranslateTUR, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.TitleTranslateTUR, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <hr />
                </div>
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="row mb-1 mt-2">
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.DescriptionKey, "GeneralDescriptionKey.VisualLocalization".Translate(), new { @class = "control-label h6" })
                                @Html.TextBoxFor(x => x.DescriptionKey, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.DescriptionKey, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.DescriptionTranslateAZE, "TranslateToAzerbaijani.VisualLocalization".Translate(), new { @class = "control-label h6" })
                                @Html.TextBoxFor(x => x.DescriptionTranslateAZE, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.DescriptionTranslateAZE, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                            <div class="form-group">
                                @Html.LabelFor(x => x.DescriptionTranslateRUS, "TranslateToRussian.VisualLocalization".Translate(), new { @class = "control-label h6" })
                                @Html.TextBoxFor(x => x.DescriptionTranslateRUS, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.DescriptionTranslateRUS, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.DescriptionTranslateENG, "TranslateToEnglish.VisualLocalization".Translate(), new { @class = "control-label h6" })
                                @Html.TextBoxFor(x => x.DescriptionTranslateENG, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.DescriptionTranslateENG, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                            <div class="form-group mb-1">
                                @Html.LabelFor(x => x.DescriptionTranslateTUR, "TranslateToTurkish.VisualLocalization".Translate(), new { @class = "control-label h6" })
                                @Html.TextBoxFor(x => x.DescriptionTranslateTUR, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.DescriptionTranslateTUR, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <hr />
                </div>
                <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.IconSourceFile, "GeneralLocalize.IconSourceFile".Translate(), new { @class = "control-label h6" })
                        @Html.TextBoxFor(x => x.IconSourceFile, new { @class = "form-control mt-1 mb-1", @type = "file" })
                        @Html.ValidationMessageFor(x => x.IconSourceFile, null, new { @class = "text-danger" })
                    </div>
                    <hr />
                </div>
                <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(x => x.IconHtml, "IconHtml.VisualLocalization".Translate(), new { @class = "control-label h6" })
                        @Html.TextBoxFor(x => x.IconHtml, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.IconHtml, null, new { @class = "text-danger" })
                    </div>
                    <hr />
                </div>

                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    @*TODO : Localize All Create Button*@
                    <div class="form-group mt-2 mb-2">
                        <input type="submit" value="@("CreateNew.LocalizationGeneral".Translate())" class="btn btn-primary" />
                        <a class="ml-2 btn btn-secondary text-light" asp-action="Index">@("BackwardToList.LocalizationGeneral".Translate())</a>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
<div id="responseMessageContainer">
    @if (Model.ResponseMessages != null && Model.ResponseMessages.Count > 0)
    {
        foreach (var response in Model.ResponseMessages)
        {
            <div class="responseMessage mt-1 mb-1">
                <div class="alert alert-@response.AlertColor alert-dismissible fade show" role="alert">
                    <ul>
                        @foreach (var message in response.AlertMessages)
                        {
                            <li>@(message)</li>
                        }
                    </ul>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
    }
</div>



@section ScriptComponent{
    <style>
        .responseMessage {
            position: relative;
            right: 20px !important;
            bottom: 20px !important;
            opacity: 0.9 !important;
        }
    </style>
    <script src="~/js/CustomComponent.js"></script>
    <script>
        setTimeout(function (e) {
            $("#responseMessageContainer").fadeOut(500);
        }, 3000)
    </script>
}