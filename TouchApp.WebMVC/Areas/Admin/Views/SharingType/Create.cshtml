@using Core.Entities.Dtos.SharingType
@using Core.Extensions

@model CreateManagementSharingTypeDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdminPanelBootstrap.cshtml";
}


<h1>@("ToCreate.TranslateLocalization".Translate())</h1>
<hr />

<h4>@("SharingTypeCreateView.HeaderLocalization".Translate())</h4>
<hr />

<div class="row">
    <div class="col-md-12 col-12 col-sm-12">
        @using (Html.BeginForm("Create", "SharingType", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row  mb-1 mt-2">

            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row mb-1 mt-2">
                    <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                        <div class="form-group">
                            @Html.LabelFor(x => x.NameKey, "NameTranslateKey.VisualLocalization".Translate(), new { @class = "control-label h6" })
                            @Html.TextBoxFor(x => x.NameKey, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.NameKey, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.NameTranslateAZE, "TranslateToAzerbaijani.VisualLocalization".Translate(), new { @class = "control-label h6" })
                            @Html.TextBoxFor(x => x.NameTranslateAZE, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.NameTranslateAZE, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                        <div class="form-group">
                            @Html.LabelFor(x => x.NameTranslateRUS, "TranslateToRussian.VisualLocalization".Translate(), new { @class = "control-label h6" })
                            @Html.TextBoxFor(x => x.NameTranslateRUS, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.NameTranslateRUS, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.NameTranslateENG, "TranslateToEnglish.VisualLocalization".Translate(), new { @class = "control-label h6" })
                            @Html.TextBoxFor(x => x.NameTranslateENG, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.NameTranslateENG, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-6 col-sm-6 col-md-4 col-lg-4">
                        <div class="form-group mb-1">
                            @Html.LabelFor(x => x.NameTranslateTUR, "TranslateToTurkish.VisualLocalization".Translate(), new { @class = "control-label h6" })
                            @Html.TextBoxFor(x => x.NameTranslateTUR, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.NameTranslateTUR, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <hr />
            </div>
            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                <div class="row mb-1 mt-2">
                    <div class="col-6 col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group mb-1">
                            @Html.LabelFor(x => x.AbriveatureClass, "AbriveatureClassSharingType.VisualLocalization".Translate(), new { @class = "control-label h6" })
                            @Html.TextBoxFor(x => x.AbriveatureClass, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.AbriveatureClass, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <hr />
            </div>

            <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                @*TODO : Localize All Create Button*@
                <div class="form-group mt-2 mb-2">
                    <input type="submit" value="@("CreateNew.LocalizationGeneral".Translate())" class="btn btn-primary" />
                    <a class="ml-2 btn btn-secondary text-light" asp-action="Index">@("BackwardToList.LocalizationGeneral".Translate())</a>
                </div>
            </div>
        </div>

        }
    </div>
</div>
<div id="responseMessageContainer">
    @if (Model.ResponseMessages != null && Model.ResponseMessages.Count > 0)
    {
        foreach (var message in Model.ResponseMessages)
        {
            <div class="responseMessage">
                <div class="alert alert-@message.AlertColor alert-dismissible fade show" role="alert">
                    <strong>@message.AlertMessage</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
    }
</div>



@section ScriptComponent{
    <style>
        .responseMessage {
            position: relative;
            right: 20px !important;
            bottom: 20px !important;
            opacity: 0.9 !important;
        }
    </style>
    <script src="~/js/CustomComponent.js"></script>
    <script>
        setTimeout(function (e) {
            $("#responseMessageContainer").fadeOut(500);
        }, 3000)
    </script>
}