<div id="responseMessageContainer">
    @if (Model.ResponseMessages != null && Model.ResponseMessages.Count > 0)
    {
        foreach (var response in Model.ResponseMessages)
        {
            <div class="responseMessage mt-1 mb-1">
                <div class="alert alert-@response.AlertColor alert-dismissible fade show" role="alert">
                    <ul>
                        @foreach (var message in response.AlertMessages)
                        {
                            <li>@(message)</li>
                        }
                    </ul>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
    }
