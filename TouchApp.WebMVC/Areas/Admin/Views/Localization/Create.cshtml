@using Core.Entities.Dtos.Localization
@using Core.Extensions

@model CreateLocalizationDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdminPanelBootstrap.cshtml";
}

<h1>Create</h1>

<h4>CreateLocalizationDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2 mb-4">
                <label asp-for="Key" class="control-label"><strong>@("Localization.KeywordGeneral".Translate())</strong></label>
                <input asp-for="Key" type="text" class="form-control" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            <hr /><hr />
            <div class="form-group mt-2 mb-4">
                <label asp-for="Translate_Ru" class="control-label"><strong>@("Localization.TranslateRUS".Translate())</strong></label>
                <input asp-for="Translate_Ru" type="text" class="form-control" />
                <span asp-validation-for="Translate_Ru" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <label asp-for="Translate_Az" class="control-label"><strong>@("Localization.TranslateAZE".Translate())</strong></label>
                <input asp-for="Translate_Az" type="text" class="form-control" />
                <span asp-validation-for="Translate_Az" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <label asp-for="Translate_En" class="control-label"><strong>@("Localization.TranslateENG".Translate())</strong></label>
                <input asp-for="Translate_En" type="text" class="form-control" />
                <span asp-validation-for="Translate_En" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 mb-2">
                <label asp-for="Translate_Tr" class="control-label"><strong>@("Localization.TranslateTUR".Translate())</strong></label>
                <input asp-for="Translate_Tr" type="text" class="form-control" />
                <span asp-validation-for="Translate_Tr" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="mt-1">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

