@using Core.Entities.Dtos.SocialMedia
@using Core.Extensions

@model CreateManagementSocialMediaDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdminPanelBootstrap.cshtml";
}

<h1>Create</h1>

<h4>CreateManagementSocialMediaDto</h4>
<hr />
<div class="row">
    <div class="col-md-12 col-12 col-sm-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row  mb-1 mt-2">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="row mb-1 mt-2">
                        <div class="col-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label asp-for="NameSocial" class="control-label"><strong>@("GeneralModelName.VisualLocalization".Translate())</strong></label>
                                <input asp-for="NameSocial" type="text" class="form-control" />
                                <span asp-validation-for="NameSocial" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label asp-for="Uri" class="control-label"><strong>@("GeneralWebUrl.VisualLocalization".Translate())</strong></label>
                                <input asp-for="Uri" type="text" class="form-control" />
                                <span asp-validation-for="Uri" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="form-group">
                                <label asp-for="IconSourceFile" class="control-label"><strong>@("GeneralLocalize.IconSourceImage".Translate())</strong></label>
                                <input type="file" class="form-control mt-1 mb-1" asp-for="IconSourceFile" />
                                <span asp-validation-for="IconSourceFile" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                </div>

                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    @*TODO : Localize All Create Button*@
                    <div class="form-group mt-2 mb-2">
                        <input type="submit" value="@("CreateNew.LocalizationGeneral".Translate())" class="btn btn-primary" />
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Index">@("BackwardToList.LocalizationGeneral".Translate())</a>
</div>